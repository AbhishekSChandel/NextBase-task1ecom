rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Inventory collection - read for all, write for all (for order processing)
    match /inventory/{productId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Products collection - read for all, write only for authenticated users
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Carts collection - users can read/write their own cart
    match /carts/{cartId} {
      allow read, write: if request.auth != null && request.auth.uid == cartId;
    }
    
    // Orders collection - allow creating orders for everyone (authenticated or guest)
    match /orders/{orderId} {
      // Allow creating orders (anyone can create)
      allow create: if true;
      // Allow reading/writing own orders
      allow read, update, delete: if true;
    }
  }
}
